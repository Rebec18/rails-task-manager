<div>
<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.name, task_path(task) %>
  <%= link_to "🗑️",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>

<%= link_to "Create a new task", new_task_path, class: "btn btn-primary" %>
</div>
